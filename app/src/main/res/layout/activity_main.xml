<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/White"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textAlignment="center"
        android:background="@drawable/shape"
        android:textColor="#ffffff"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:id="@+id/txt_op"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape"
        android:text="Tap to open Mic"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:onClick="btnSpeech"/>




    <SeekBar
        android:id="@+id/seekBarPitch"
        android:layout_width="154dp"
        android:background="@color/White"

        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"

        android:layout_marginTop="40dp"
        android:progress="50"
        android:layout_below="@+id/txt_op" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="40pt"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_op"
        android:background="@drawable/shape"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:text="Pitch"
        android:textStyle="bold"
        android:layout_toRightOf="@id/seekBarPitch" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="40pt"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:text="Speed"
        android:textSize="20sp"

        android:layout_below="@id/seekBarPitch"
       android:layout_toRightOf="@id/seekBar2" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"

        android:layout_marginTop="40dp"        android:layout_below="@id/seekBarPitch"
        android:progress="50"
       />


    <Button
        android:id="@+id/buSpeak"
android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar2"
        android:layout_centerInParent="true"
        android:layout_marginStart="293dp"
        android:textColor="#000"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="31dp"
        android:enabled="false"
        android:text="Speak" />

</RelativeLayout>